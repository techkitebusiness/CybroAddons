<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="blog_latest_banner" inherit_id="website.snippets" name="Latest Blog banner">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_boec.blog_latest" t-thumbnail="/theme_boec/static/src/images/snippets/latest_blog.jpg"/>
        </xpath>
    </template>

    <template id="blog_latest" name="Latest Blog">
        <!-- section Blog starts here -->
        <section class="blog_index gap">
            <div class="heading">
                <p class="sub">Latest News</p>
                <h2 class="main">Current Trends</h2>
            </div>
            <div class="wrapper">
                <div class="container">
                    <div class="row">
                        <div class="card-deck">
                            <div class="col-lg-4 col-md-6  col-12 p-0 ">
                                <div class="card ">
                                    <img class="card-img-top" src="/theme_boec/static/src/images/blog/1.jpg" alt="Card image cap"/>
                                    <div class="card-body">
                                        <div class="wrapper">
                                            <i class="far fa-calendar-alt"> 16 April 2021</i>
                                            <h5 class="card-title">Eius oratio indoctum in mea</h5>
                                            <a href="#" class="btn btn-dp">Read More</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6  col-12 p-0">
                                <div class="card ">
                                    <img class="card-img-top" src="/theme_boec/static/src/images/blog/2.jpg" alt="Card image cap"/>
                                    <div class="card-body">
                                        <div class="wrapper">
                                            <i class="far fa-calendar-alt"> 30 August 2021</i>
                                            <h5 class="card-title">Cu simul utamur maiestatis est</h5>
                                            <a href="#" class="btn btn-dp">Read More</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6  col-12 p-0">
                                <div class="card ">
                                    <img class="card-img-top" src="/theme_boec/static/src/images/blog/3.jpg" alt="Card image cap"/>
                                    <div class="card-body">
                                        <div class="wrapper">
                                            <i class="far fa-calendar-alt"> 05 December 2021</i>
                                            <h5 class="card-title">Est nibh wisi magna ad</h5>
                                            <a href="#" class="btn btn-dp">Read More</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- section Blog ends here -->
    </template>
</odoo>