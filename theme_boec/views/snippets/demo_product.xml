<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="demo_product_banner" inherit_id="website.snippets" name="Demo Product banner">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_boec.demo_product" t-thumbnail="/theme_boec/static/src/images/snippets/demo_product.jpg"/>
        </xpath>
    </template>

    <template id="demo_product" name="Demo Product">
        <!-- Demo product section starts here -->
        <section class="demo_product gap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 offset-lg-5 col-md-12 col-12">
                        <div class="dp_wrapper">
                            <div class="dp_img">
                                <img src="/theme_boec/static/src/images/demo-product/dp1.jpg" alt=""/>
                            </div>
                            <div class="dp_details">
                                <div class="type">
                                    Shoes <br/>Spring 2030
                                </div>
                                <a href="#" class="btn btn-dp hvr-underline-reveal">
                                    Shop now
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-12 ">
                        <div class="dp_wrapper2">
                            <div class="dp_img">
                                <img src="/theme_boec/static/src/images/demo-product/dp3.jpg" alt=""/>
                            </div>
                            <div class="dp_details">
                                <div class="type">
                                    Cloathing Collection 2030
                                </div>
                                <a href="#" class="btn btn-dp hvr-underline-reveal">
                                    Shop now
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-12 offset-lg-5 col-12">
                        <div class="dp_wrapper3">
                            <div class="dp_img">
                                <img src="/theme_boec/static/src/images/demo-product/dp2.jpg" alt=""/>
                            </div>
                            <div class="dp_details">
                                <div class="type">
                                    Cloathing <br/>Collection 2030
                                </div>
                                <a href="#" class="btn btn-dp hvr-underline-reveal">
                                    Shop now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Demo product section ends here -->
    </template>
</odoo>